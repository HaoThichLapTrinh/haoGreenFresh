{
  "compilerOptions": {
    /* ✅ Nâng cao cấu hình TypeScript cho React 18 */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",                  // ✅ Bắt buộc để JSX hoạt động
    "types": ["vite/client", "react"],   // ✅ Thêm "react" để TS nhận namespace JSX
    "skipLibCheck": true,
    "allowJs": false,
    "useDefineForClassFields": true,
    "strict": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* ✅ Cho phép import module hiện đại */
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    /* ✅ Kiểm tra tốt hơn */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
